<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/edit_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amatic_bold"
            android:text="Menu Item"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/add_menu_item_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/green_round_button"
            android:enabled="true"
            android:fontFamily="@font/amatic_regular"
            android:text="@string/add_menu_item"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/menu_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:orientation="vertical">

            <TableRow
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp">

                <TextView
                    android:layout_column="0"
                    android:fontFamily="@font/amatic"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="     "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="1"
                    android:background="@drawable/black_border"
                    android:fontFamily="@font/amatic"
                    android:gravity="center"
                    android:paddingLeft="40dip"
                    android:paddingRight="40dip"
                    android:text="Item"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="2"
                    android:background="@drawable/black_border"
                    android:fontFamily="@font/amatic"
                    android:gravity="center"
                    android:paddingLeft="80dip"
                    android:paddingRight="80dip"
                    android:text="Description"
                    android:textSize="22dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_column="3"
                    android:fontFamily="@font/amatic"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="    "
                    android:textSize="22dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp">

                <Button
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_column="0"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_edit_green_24dp"
                    android:enabled="false"
                    android:fontFamily="@font/amatic_regular" />

                <TextView
                    android:layout_column="1"
                    android:background="@drawable/black_border"
                    android:fontFamily="@font/amatic"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="\n Latte \n"
                    android:textSize="22dp" />

                <!--                might be unnecessary bc there is a delete button in the edit fragment-->
                <TextView
                    android:layout_width="125dp"
                    android:layout_column="2"
                    android:background="@drawable/black_border"
                    android:fontFamily="@font/amatic"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Flavor = Vanilla \n Price = $4, $5, $6 \n Caffeine = 115mg, 150mg, 190mg"
                    android:textSize="22dp" />

                <Button
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_column="3"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_delete_red_24dp"
                    android:enabled="false"
                    android:fontFamily="@font/amatic_regular" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>