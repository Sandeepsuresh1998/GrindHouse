<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">


    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:fontFamily="@font/amatic_regular"
        android:gravity="center"
        android:text="@string/BeanandLeaf"
        android:textColor="@color/white"
        android:textSize="55dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/amatic_regular"
        android:gravity="center"
        android:text="a curated and personalized platform for coffee lovers and makers "
        android:textColor="@color/white"
        android:textSize="30dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/link_signup"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginStart="60dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="60dp"
        android:background="@color/white"
        android:fontFamily="@font/amatic_regular"
        android:gravity="center"
        android:text="No account yet? Create one"
        android:textColor="@color/primary_lighter"
        android:textSize="19dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/link_admin"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_gravity="start"
        android:layout_marginStart="60dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="48dp"
        android:background="@color/white"
        android:fontFamily="@font/amatic_regular"
        android:gravity="center"
        android:text="Admin Access"
        android:textColor="@color/primary_lighter"
        android:textSize="18dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/link_login"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginStart="60dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="48dp"
        android:background="@color/white"
        android:fontFamily="@font/amatic_regular"
        android:gravity="center"
        android:text="Log In"
        android:textColor="@color/primary_lighter"
        android:textSize="20dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>