<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/historyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amatic_bold"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moneySpentTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/amatic_bold"
            android:text="$726"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moneySpentTotalDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="165dp"
            android:fontFamily="@font/amatic_bold"
            android:text="spent on coffee"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/separationBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/amatic_bold"
            android:text="|"
            android:textColor="@color/white"
            android:textSize="100dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/milesWalkedTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/amatic_bold"
            android:text="15"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/milesWalkedTotalDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="165dp"
            android:fontFamily="@font/amatic_bold"
            android:text="miles walked to shop"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartDrinksPurchased"
            android:layout_width="381dp"
            android:layout_height="314dp"
            android:layout_marginTop="210dp" />

<!--        <com.github.mikephil.charting.charts.BarChart-->
<!--            android:id="@+id/barChartStoresDrinks"-->
<!--            android:layout_width="376dp"-->
<!--            android:layout_height="375dp"-->
<!--            android:layout_marginTop="525dp" />-->

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartReturnRates"
            android:layout_width="376dp"
            android:layout_height="500dp"
            android:layout_marginTop="525dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartMoneySpent"
            android:layout_width="376dp"
            android:layout_height="500dp"
            android:layout_marginTop="1025dp" />

    </RelativeLayout>
</ScrollView>
