<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <Button
                android:id="@+id/record_order_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/green_round_button"
                android:enabled="true"
                android:fontFamily="@font/amatic_regular"
                android:text="Record Order"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/map_click_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amatic_bold"
                android:text="Menu"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold"/>

            <TableLayout
                android:id="@+id/map_click_menu_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp">


                    <TextView
                        android:layout_column="0"
                        android:background="@drawable/black_border"
                        android:fontFamily="@font/amatic"
                        android:gravity="center"
                        android:paddingLeft="40dip"
                        android:paddingRight="40dip"
                        android:text="Item"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:background="@drawable/black_border"
                        android:fontFamily="@font/amatic"
                        android:gravity="center"
                        android:paddingLeft="80dip"
                        android:paddingRight="80dip"
                        android:text="Description"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>