<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amatic_bold"
        android:text="Store"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/store_drropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="Select Store"
        android:fontFamily="@font/amatic"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/store_spinner"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/amatic"
        android:text="Store Name"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/storename_edit"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:fontFamily="@font/amatic_regular"
        android:scrollbarSize="4dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/location_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/amatic"
        android:text="Latitude"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/location_lat_edit"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:fontFamily="@font/amatic_regular"
        android:scrollbarSize="4dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/location_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/amatic"
        android:text="Longitude"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/location_long_edit"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="325dp"
        android:ems="10"
        android:fontFamily="@font/amatic_regular"
        android:scrollbarSize="4dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/update_store"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/blue_round_button"
        android:enabled="true"
        android:fontFamily="@font/amatic_regular"
        android:text="Update Store"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/delete_store"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/red_round_button"
        android:enabled="true"
        android:fontFamily="@font/amatic_regular"
        android:text="@string/delete_store"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_store"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/green_round_button"
        android:enabled="true"
        android:fontFamily="@font/amatic_regular"
        android:text="@string/add_store"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>
</ScrollView>